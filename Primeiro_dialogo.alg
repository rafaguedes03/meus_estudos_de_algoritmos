algoritmo "media"

var
   n: caractere
   n1: real
   n2: real
   n3: real

inicio
      escreva ("Olá, qual seu nome? ")
      leia (n)
      escreva ("Olá ", n, ", qual foi sua média em português? ")
      leia (n1)
      escreva ("E em matemática? ")
      leia (n2)
      n3 <- (n1+n2)/2
      escreva ("A média de suas notas são: ", n3, "!")
fimalgoritmo
